<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="■ 거래처 정보"
            android:textSize="20dp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="거래처명"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/map_cName_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e1dedd"
                    android:gravity="left"
                    android:hint="거래처명 입력"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="17dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="담당자명"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/map_pName_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e1dedd"
                    android:gravity="left"
                    android:hint="담당자명 입력"
                    android:paddingLeft="10dp"
                    android:textSize="17dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="전화번호"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/map_Tel_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e1dedd"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:textSize="17dp"
                    android:inputType="phone"/>

            </TableRow>

            <TableRow
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="주    소"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/map_Address_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e1dedd"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/map_Address_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_dialog_map" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Map_savBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />

            <Button
                android:id="@+id/Map_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
